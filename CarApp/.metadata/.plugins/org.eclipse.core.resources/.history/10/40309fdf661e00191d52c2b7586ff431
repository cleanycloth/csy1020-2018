import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
 
 
public class CarApp extends JFrame 
{
	private JLabel jLOption, jLSquare, jlDirection;
    private JTextField jTFOption, jTFSquare, jTFDirection;
    private JButton jBExit; 
    private JButton jBUp, jBDown, jBLeft, jBRight ,jBUpLeft, jBUpRight, jBCenter, jBDownLeft, jBDownRight;
    private JPanel jPMain, jPRight, jPBottom, testPanel;
    
    public static void main (String[] args) //Method for declaring main
    {
        CarApp frame; 
        	frame = new CarApp();
        frame.setSize(1024, 768);
        frame.createGUI();
        frame.show();
    }

    private void createPanels()
    {
    	Container window = getContentPane();
    	jPMain = new JPanel();
        jPMain.setPreferredSize(new Dimension(800, 600));
        jPMain.setBackground(Color.BLACK);
        window.add(jPMain);
        
        jPRight = new JPanel();
        jPRight.setPreferredSize(new Dimension(170, 600));
        jPRight.setBackground(Color.PINK);
        window.add(jPRight);
        
        jPBottom = new JPanel();
        jPBottom.setPreferredSize(new Dimension(800, 50));
        jPBottom.setBackground(Color.GREEN);
        window.add(jPBottom);
        
        testPanel = new JPanel();
        testPanel.setPreferredSize (new Dimension(170,200));
        testPanel.setBackground(Color.RED);
    }


    private void createGUI() //Method for declaring createGUI (The interface)
    {
    	setDefaultCloseOperation(EXIT_ON_CLOSE);
        Container window = getContentPane();
        window.setLayout(new FlowLayout() );
       
        	createPanels();
        
        
	        //Option Label and Text Field
	        jLOption = new JLabel("Option:                    ");
	        window.add(jLOption);
	        jPRight.add(jLOption);
	        
	        jTFOption = new JTextField("       1       ");
	        window.add(jTFOption);
	        jPRight.add(jTFOption);

	        //Square Label and Text Field
	        jLSquare = new JLabel("Square:                   ");
	        window.add(jLSquare);
	        jPRight.add(jLSquare);
	        jTFSquare = new JTextField("   7   ");
	        window.add(jTFSquare);
	        jPRight.add(jTFSquare);

	        
	        //Direction Label and Text Field
	        jlDirection = new JLabel("Direction:                ");
	        window.add(jlDirection);
	        jPRight.add(jlDirection);

	        jTFDirection = new JTextField("  Up  ");
	        window.add(jTFDirection);
	        jPRight.add(jTFDirection);

	        jPRight.add(testPanel);
	        GridLayout testLayout = new GridLayout(3,3);
	        testPanel.setLayout(testLayout);
	        
        	jBUpLeft = new JButton("");
    		testPanel.add(jBUpLeft);
    		
	        jBUp = new JButton("Up");
	        testPanel.add(jBUp);
	        
        	jBUpRight = new JButton("");
        	testPanel.add(jBUpRight);
    		
    		jBLeft = new JButton("Left");
    		testPanel.add(jBLeft);
    			
    		jBCenter = new JButton("");
    		testPanel.add(jBCenter);
        	
        	jBRight = new JButton("Right");
        	testPanel.add(jBRight);
        		
        	jBDownLeft = new JButton("");
        	testPanel.add(jBDownLeft);
        	
	        jBDown = new JButton("Down");
	        testPanel.add(jBDown);
	        	
	        jBDownRight = new JButton("");
	        testPanel.add(jBDownRight);     	
       
	        jBUpLeft.setEnabled(false);
	        jBUpRight.setEnabled(false);
	        jBDownLeft.setEnabled(false);
	        jBDownRight.setEnabled(false);
	        
        //Closing the Application using the button
        jBExit = new JButton("Exit");
        window.add(jBExit);
        
        jBExit.addActionListener(new ActionListener()
        		{
        			public void actionPerformed(ActionEvent e)
        				{
        					System.exit(0);
        				}
        		});

    }
    
}